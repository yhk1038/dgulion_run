<h2>회원 가입</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username, '이름' %><br>
    <%= f.text_field :username, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :email, '이메일' %><br>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, '비밀번호' %>
    <% if @minimum_password_length %>
    <em>(8 자리 이상)</em><br>
    <% end %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, '비밀번호확인' %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :major, '학과' %><br>
    <%= f.text_field :major, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :student_id, '학번' %><br>
    <%= f.text_field :student_id, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :phonenumber, '휴대폰번호' %><br>
    <%= f.text_field :phonenumber, autofocus: true %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "완료" %>
  </div>
<% end %> 
<% if current_user %>
<% link_to '로그아웃', destroy_user_session_path %>
<% end %>
<%= render "devise/shared/links" %>
